.header{
  display: flex;
  padding: 20rpx;
  background: #fff;
}
.header .icon{
  width:40rpx;
  height:40rpx;
  vertical-align: top;
}
.header .search{
  flex: 1;
  color: black;
  font-size: 30rpx;
  line-height: 10rpx;
  padding: 10rpx;
  border: 1rpx solid gainsboro;
  border-radius: 10rpx;
  background: #eee;
}
.header .search .icon{
  float: left;
  margin: 1rpx 5rpx 0 0;
}
.header button{
  margin-left: 20rpx;
  font-size:  30rpx;
}
.header input{
  height: 30rpx;
  min-height: 40rpx;
}