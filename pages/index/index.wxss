page{
  height:100%;
}
.banner{
  height:330rpx;
}
.banner image{
  width:100%;
  height:100%
}
.title{
  position: relative;
  text-align: center;
  font-size:32rpx;
  font-weight: bold;
  line-height: 2;
  margin-bottom: 20rpx;
}
 .title::before{
  content:"";
  position:absolute;
  left:50%;
  top:50%;
  margin-left: -180rpx;
  width:100rpx;
  height:1rpx;
  background: #000;
}
 .title::after{
  content:"";
  position:absolute;
  left:50%;
  top:50%;
  margin-left: 80rpx;
  width:100rpx;
  height:1rpx;
  background: #000;
}

 .filters{
  display: -webkit-flex;
  border-top: 1rpx solid #efefef;
}
 .filters .filter{
  flex:1;
  text-align: center;
  color: #696969;
  font-size: 30rpx;
  line-height: 3;
}
.active{
  color:red !important;
  font-weight:blod
}
.shoplist image{
  height:250rpx;
  width:100%
}
.container{
  height:100%;
}
.header{
  position: fixed;
  top:0;
  left:0;
  width:100%;
  padding:20rpx;
  display: flex;
  z-index: 1;
  transition: background 0.5s ease-in-out;
}
.header .icon{
  width:40rpx;
  height:40rpx
}
.header .location{
  color:#fff;
  font-size: 30rpx;
  line-height: 40rpx;
  min-width: 100rpx;
  max-width: 340rpx;
  padding: 10rpx 20rpx 10rpx 10rpx;
  border-radius: 30rpx;
  background-color: rgba(0,0,0,.3);
  margin-right: 20rpx;
  vertical-align: middle;
}
.header .search{
  width: 68%;
  color: #888;
  font-size: 30rpx;
  line-height: 40rpx;
  padding: 10rpx;
  border-radius: 30rpx;
  background: #fff ;
}
.scrolled{
  background: #feb70f;
}
scroll-view{
  height:100%
}