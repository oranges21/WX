.banner{
  height:330rpx;
}
.banner image{
  width:100%;
  height:100%
}
.title{
  position: relative;
  text-align: center;
  font-size:32rpx;
  font-weight: bold;
  line-height: 2;
  margin-bottom: 20rpx;
}
 .title::before{
  content:"";
  position:absolute;
  left:50%;
  top:50%;
  margin-left: -180rpx;
  width:100rpx;
  height:1rpx;
  background: #000;
}
 .title::after{
  content:"";
  position:absolute;
  left:50%;
  top:50%;
  margin-left: 80rpx;
  width:100rpx;
  height:1rpx;
  background: #000;
}

 .filters{
  display: -webkit-flex;
  border-top: 1rpx solid #efefef;
}
 .filters .filter{
  flex:1;
  text-align: center;
  color: #696969;
  font-size: 30rpx;
  line-height: 3;
}
