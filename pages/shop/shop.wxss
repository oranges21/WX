page{
  height:100%;
  overflow: hidden;
}
.container{
  height:100%;
  overflow: hidden;
}
.header{
  position: relative;
  background-color: #feb70f;
}
.logo{
  float: left;
  width:160rpx;
  height:160rpx;
  border: 2rpx solid #fff;
  border-radius:50%;
  margin-right:10rpx;
}
.name{
  padding-top:20rpx;
  font-size: 46rpx;
  line-height: 60rpx;
}
.welcome{
  color:#333;
  font-size: 30rpx;
  width:385rpx;
  line-height: 70rpx;
}
.follow{
  position: absolute;
  right:20rpx;
  top:50rpx;
  font-size: 30rpx;
  line-height: 2;
  border:1px solid;
  padding: 0 0.7em;
  border-radius: 30rpx;
}
.line{
  clear:both;
  width:100%;
  height:1px;
  padding: 0;
  border:1px dashed #000;
  /* padding-top:20rpx; */
}
.desc{
  color: #333;
  font-size: 30rpx;
  line-height: 40rpx;
  padding:20rpx 0;
  margin-bottom: 20rpx;
}